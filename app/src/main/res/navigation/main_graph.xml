<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/primerNavigationFragment">

    <fragment
        android:id="@+id/primerNavigationFragment"
        android:name="com.example.zonadepruebas.cursoGaston.navigationComponent.PrimerNavigationFragment"
        android:label="fragment_primer_navigation"
        tools:layout="@layout/fragment_primer_navigation" >
        <action
            android:id="@+id/action_primerNavigationFragment_to_segundoNavigationFragment"
            app:destination="@id/segundoNavigationFragment" />
    </fragment>
    <fragment
        android:id="@+id/segundoNavigationFragment"
        android:name="com.example.zonadepruebas.cursoGaston.navigationComponent.SegundoNavigationFragment"
        android:label="fragment_segundo_navigation"
        tools:layout="@layout/fragment_segundo_navigation" />
</navigation>